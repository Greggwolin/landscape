  const getStatusBadge = (status: string) => {
    switch (status) {
      case 'complete':
        return (
          <span className="tw-inline-flex tw-items-center tw-rounded-full tw-bg-green-100 px-2 py-0.5 tw-text-xs tw-font-medium tw-text-green-700">
            Complete
          </span>
        );
      case 'partial':
        return (
          <span className="tw-inline-flex tw-items-center tw-rounded-full tw-bg-yellow-100 px-2 py-0.5 tw-text-xs tw-font-medium tw-text-yellow-700">
            Partial
          </span>
        );
      case 'missing':
        return (
          <span className="tw-inline-flex tw-items-center tw-rounded-full tw-bg-red-100 px-2 py-0.5 tw-text-xs tw-font-medium tw-text-red-700">
            Missing
          </span>
        );
      default:
        return null;
    }
  };

