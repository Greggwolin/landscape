'use client';

/**
 * ValueTiles Component
 *
 * Displays three Direct Cap valuation perspectives plus DCF in prominent tiles.
 * Tiles: F-12 Current, F-12 Market, Stabilized, DCF
 * Clicking a tile selects that NOI basis for detailed view.
 *
 * Session: QK-11 (original), QK-30 (3-basis consolidation), DCF Implementation
 */

import React from 'react';
import type { ValueTile, ValueTilesProps, DCFAnalysisData } from '@/types/income-approach';
import {
  formatCurrencyCompact,
  formatPercent,
  formatPerUnit,
  getTileColors,
  getDCFTileColor,
  NOI_BASIS_LABELS,
} from '@/types/income-approach';
import { useTheme } from '@/app/components/CoreUIThemeProvider';

export type ValuationMethod = 'direct_cap' | 'dcf';

export interface ExtendedValueTilesProps extends ValueTilesProps {
  dcfData?: DCFAnalysisData | null;
  isDCFLoading?: boolean;
  activeMethod?: ValuationMethod;
  onMethodChange?: (method: ValuationMethod) => void;
}

export function ValueTiles({
  tiles,
  selectedBasis,
  onSelectBasis,
  unitCount,
  dcfData,
  isDCFLoading,
  activeMethod = 'direct_cap',
  onMethodChange,
}: ExtendedValueTilesProps) {
  const { theme } = useTheme();
  // Filter to only show the 3 Direct Cap tiles (in case backend sends more)
  const directCapTiles = tiles.filter(t =>
    t.id === 'f12_current' || t.id === 'f12_market' || t.id === 'stabilized'
  );

  const handleDCFClick = () => {
    if (onMethodChange) {
      onMethodChange('dcf');
    }
  };

  const handleDirectCapClick = (basisId: string) => {
    if (onMethodChange) {
      onMethodChange('direct_cap');
    }
    onSelectBasis(basisId as any);
  };

  return (
    <div className="tw-grid tw-grid-cols-3 lg:tw-grid-cols-4 gap-4 mb-6">
      {directCapTiles.map((tile) => (
        <ValueTileCard
          key={tile.id}
          tile={tile}
          isSelected={activeMethod === 'direct_cap' && tile.id === selectedBasis}
          onClick={() => handleDirectCapClick(tile.id)}
          unitCount={unitCount}
          theme={theme}
        />
      ))}
      {/* DCF Tile */}
      <DCFTile
        dcfData={dcfData}
        isLoading={isDCFLoading}
        isSelected={activeMethod === 'dcf'}
        onClick={handleDCFClick}
        theme={theme}
      />
    </div>
  );
}

/**
 * DCF Tile - shows DCF valuation or loading state
 */
interface DCFTileProps {
  dcfData?: DCFAnalysisData | null;
  isLoading?: boolean;
  isSelected: boolean;
  onClick: () => void;
  theme: 'light' | 'dark';
}

function DCFTile({ dcfData, isLoading, isSelected, onClick, theme }: DCFTileProps) {
  const dcfColors = getDCFTileColor(theme);
  const subtleBorder = theme === 'light' ? 'rgba(0,0,0,0.1)' : 'rgba(255,255,255,0.1)';

  // Loading state
  if (isLoading) {
    return (
      <div
        className="tw-relative tw-rounded-lg p-4 text-left"
        style={{
          backgroundColor: dcfColors.bg,
          borderWidth: '1px',
          borderStyle: 'dashed',
          borderColor: dcfColors.border,
        }}
      >
        <div
          className="tw-text-xs tw-font-medium tw-uppercase tw-tracking-wider mb-2 tw-opacity-70"
          style={{ color: dcfColors.text }}
        >
          DCF
        </div>
        <div className="tw-flex tw-items-center gap-2">
          <div className="tw-animate-spin tw-rounded-full h-4 w-4 tw-border-b-2 tw-border-purple-500" />
          <span style={{ color: 'var(--cui-secondary-color)' }}>Loading...</span>
        </div>
      </div>
    );
  }

  // No data state
  if (!dcfData) {
    return (
      <button
        type="button"
        onClick={onClick}
        className="tw-relative tw-rounded-lg p-4 text-left tw-transition-all tw-duration-200 hover:tw-scale-[1.02] focus:outline-none focus:ring-2 focus:tw-ring-offset-2 tw-cursor-pointer"
        style={{
          backgroundColor: dcfColors.bg,
          borderWidth: '1px',
          borderStyle: 'dashed',
          borderColor: dcfColors.border,
        }}
      >
        <div
          className="tw-text-xs tw-font-medium tw-uppercase tw-tracking-wider mb-2 tw-opacity-70"
          style={{ color: dcfColors.text }}
        >
          DCF
        </div>
        <div
          className="tw-text-lg tw-font-medium mb-1"
          style={{ color: 'var(--cui-body-color)' }}
        >
          Click to Load
        </div>
        <div
          className="tw-text-xs mt-2"
          style={{ color: 'var(--cui-secondary-color)' }}
        >
          Multi-year cash flow analysis
        </div>
      </button>
    );
  }

  // Active DCF tile with data
  const { metrics, assumptions } = dcfData;

  return (
    <button
      type="button"
      onClick={onClick}
      className="tw-relative tw-rounded-lg p-4 text-left tw-transition-all tw-duration-200 hover:tw-scale-[1.02] focus:outline-none focus:ring-2 focus:tw-ring-offset-2"
      style={{
        backgroundColor: dcfColors.bg,
        borderWidth: isSelected ? '3px' : '1px',
        borderStyle: 'solid',
        borderColor: isSelected ? dcfColors.border : subtleBorder,
        boxShadow: isSelected ? `0 0 20px ${dcfColors.border}40` : 'none',
      }}
    >
      {/* Selected indicator */}
      {isSelected && (
        <div
          className="tw-absolute top-2 right-2 w-2 h-2 tw-rounded-full"
          style={{ backgroundColor: dcfColors.border }}
        />
      )}

      {/* Label */}
      <div
        className="tw-text-xs tw-font-medium tw-uppercase tw-tracking-wider mb-2 tw-opacity-70"
        style={{ color: dcfColors.text }}
      >
        DCF
      </div>

      {/* Primary Value - Present Value */}
      <div
        className="tw-text-2xl tw-font-bold mb-1"
        style={{ color: 'var(--cui-body-color)' }}
      >
        {formatCurrencyCompact(metrics.present_value)}
      </div>

      {/* IRR */}
      <div
        className="tw-text-sm mb-2"
        style={{ color: dcfColors.text }}
      >
        {metrics.irr !== null ? `${formatPercent(metrics.irr)} IRR` : '— IRR'}
      </div>

      {/* Price per Unit */}
      <div
        className="tw-text-sm tw-opacity-80"
        style={{ color: 'var(--cui-secondary-color)' }}
      >
        {metrics.price_per_unit ? formatPerUnit(metrics.price_per_unit) : '—'}
      </div>

      {/* Hold Period */}
      <div
        className="tw-text-xs mt-2 pt-2 tw-border-t"
        style={{
          color: 'var(--cui-secondary-color)',
          borderColor: subtleBorder,
        }}
      >
        {assumptions.hold_period_years}-year hold
      </div>
    </button>
  );
}

interface ValueTileCardProps {
  tile: ValueTile;
  isSelected: boolean;
  onClick: () => void;
  unitCount: number;
  theme: 'light' | 'dark';
}

function ValueTileCard({ tile, isSelected, onClick, unitCount: _unitCount, theme }: ValueTileCardProps) {
  const tileColors = getTileColors(theme);
  // Get colors for tile, fallback to market colors if not found
  const colors = tileColors[tile.id] || tileColors['f12_market'];
  void _unitCount; // Reserved for future unit-based calculations
  const subtleBorder = theme === 'light' ? 'rgba(0,0,0,0.1)' : 'rgba(255,255,255,0.1)';
  const subtleBg = theme === 'light' ? 'rgba(0,0,0,0.05)' : 'rgba(255,255,255,0.1)';

  return (
    <button
      onClick={onClick}
      className="tw-relative tw-rounded-lg p-4 text-left tw-transition-all tw-duration-200 hover:tw-scale-[1.02] focus:outline-none focus:ring-2 focus:tw-ring-offset-2"
      style={{
        backgroundColor: colors.bg,
        borderWidth: isSelected ? '3px' : '1px',
        borderStyle: 'solid',
        borderColor: isSelected ? colors.border : subtleBorder,
        boxShadow: isSelected ? `0 0 20px ${colors.border}40` : 'none',
      }}
    >
      {/* Selected indicator */}
      {isSelected && (
        <div
          className="tw-absolute top-2 right-2 w-2 h-2 tw-rounded-full"
          style={{ backgroundColor: colors.border }}
        />
      )}

      {/* Label */}
      <div
        className="tw-text-xs tw-font-medium tw-uppercase tw-tracking-wider mb-2 tw-opacity-70"
        style={{ color: colors.text }}
      >
        {NOI_BASIS_LABELS[tile.id]}
      </div>

      {/* Primary Value */}
      <div
        className="tw-text-2xl tw-font-bold mb-1"
        style={{ color: 'var(--cui-body-color)' }}
      >
        {tile.value ? formatCurrencyCompact(tile.value) : '—'}
      </div>

      {/* Cap Rate */}
      <div
        className="tw-text-sm mb-2"
        style={{ color: colors.text }}
      >
        {formatPercent(tile.cap_rate)} cap
      </div>

      {/* Price per Unit */}
      <div
        className="tw-text-sm tw-opacity-80"
        style={{ color: 'var(--cui-secondary-color)' }}
      >
        {tile.price_per_unit ? formatPerUnit(tile.price_per_unit) : '—'}
      </div>

      {/* NOI */}
      <div
        className="tw-text-xs mt-2 pt-2 tw-border-t"
        style={{
          color: 'var(--cui-secondary-color)',
          borderColor: subtleBorder,
        }}
      >
        NOI: {formatCurrencyCompact(tile.noi)}
      </div>

      {/* Stabilized vacancy indicator */}
      {tile.uses_stabilized_vacancy && (
        <div
          className="tw-absolute bottom-2 right-2 text-[10px] px-1.5 py-0.5 rounded"
          style={{
            backgroundColor: subtleBg,
            color: 'var(--cui-secondary-color)',
          }}
        >
          Stabilized Vacancy
        </div>
      )}
    </button>
  );
}

export default ValueTiles;
