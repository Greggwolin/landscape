'use client';

import React, { useEffect, useMemo, useState } from 'react'
import { SemanticButton } from '@/components/ui/landscape'

type Category = {
  category_id: number
  code: string
  kind: 'Source' | 'Use'
  class: string | null
  event: string | null
  uoms: { code: string; label: string }[]
  pe_levels?: string[]
  tiers?: number[]
}

type Uom = { uom_code: string; name: string; uom_type: string }

const CategoryTree: React.FC = () => {
  const [categories, setCategories] = useState<Category[]>([])
  const [uoms, setUoms] = useState<Uom[]>([])
  const [selectedId, setSelectedId] = useState<number | null>(null)
  const [form, setForm] = useState<any>({ code: '', kind: 'Use', class: '', event: '', is_active: true, uoms: [], tiers: [] })
  const [saving, setSaving] = useState(false)

  const reload = async () => {
    const [cats, u] = await Promise.all([
      fetch('/api/fin/categories').then(r => r.json()),
      fetch('/api/fin/uoms').then(r => r.json()),
    ])
    setCategories(Array.isArray(cats) ? cats : [])
    setUoms(Array.isArray(u) ? u : [])
  }

  useEffect(() => { reload() }, [])

  useEffect(() => {
    if (selectedId) {
      const c = categories.find(x => x.category_id === selectedId)
      if (c) setForm({
        code: c.code, kind: c.kind, class: c.class ?? '', event: c.event ?? '', is_active: true,
        uoms: (c.uoms ?? []).map(u => u.code),
        tiers: c.tiers ?? (c.pe_levels ?? []).map((level) => level === 'project' ? 0 : level === 'area' ? 1 : level === 'phase' ? 2 : 3)
      })
    }
  }, [selectedId, categories])

  const flatLabel = (c: Category) => [c.kind, c.class, c.event].filter(Boolean).join(' · ')
  const sorted = useMemo(() => [...categories].sort((a, b) => flatLabel(a).localeCompare(flatLabel(b))), [categories])

  const onSave = async () => {
    setSaving(true)
    try {
      if (!selectedId) {
        const res = await fetch('/api/fin/categories', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(form) })
        if (!res.ok) throw new Error(await res.text())
        setSelectedId((await res.json()).category_id)
      } else {
        const res = await fetch(`/api/fin/categories/${selectedId}`, { method: 'PATCH', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(form) })
        if (!res.ok) throw new Error(await res.text())
      }
      await reload()
    } catch (e) { console.error('Save failed', e) } finally { setSaving(false) }
  }

  const onDelete = async () => {
    if (!selectedId) return
    setSaving(true)
    try {
      await fetch(`/api/fin/categories/${selectedId}`, { method: 'DELETE' })
      setSelectedId(null)
      setForm({ code: '', kind: 'Use', class: '', event: '', is_active: true, uoms: [], tiers: [] })
      await reload()
    } catch (e) { console.error('Delete failed', e) } finally { setSaving(false) }
  }

  return (
    <div className="p-4">
      <div className="tw-bg-gray-800 rounded border tw-border-gray-700 tw-overflow-hidden">
        <div className="tw-bg-gray-900 px-3 py-2 tw-text-sm text-white">Admin · Category Tree</div>
        <div className="tw-grid tw-grid-cols-1 md:tw-grid-cols-3 gap-3 p-3 tw-text-xs">
          <div className="md:col-span-1 border tw-border-gray-700 rounded p-2 tw-bg-gray-900 tw-max-h-[60vh] tw-overflow-auto">
            {(sorted ?? []).map(c => (
              <button key={c.category_id} className={`tw-w-full text-left px-2 py-1 rounded ${selectedId === c.category_id ? tw-'bg-blue-900 text-white' : tw-'text-gray-300 hover:tw-bg-gray-800'}`} onClick={() => setSelectedId(c.category_id)}>
                <div className="tw-font-mono text-[11px] tw-text-gray-400">{c.code}</div>
                <div>{flatLabel(c)}</div>
              </button>
            ))}
            <div className="mt-2">
              <SemanticButton intent="primary-action" size="sm" onClick={() => { setSelectedId(null); setForm({ code: '', kind: 'Use', class: '', event: '', is_active: true, uoms: [], tiers: [] }) }}>New Category</SemanticButton>
            </div>
          </div>
          <div className="md:col-span-2 border tw-border-gray-700 rounded p-3 tw-bg-gray-900 tw-space-y-3">
            <div className="tw-flex tw-flex-col gap-2">
              <label className="tw-text-gray-300">Code</label>
              <input className="tw-w-full tw-bg-gray-800 border tw-border-gray-700 rounded px-2 py-1 text-white" value={form.code} onChange={e => setForm((f: any) => ({ ...f, code: e.target.value }))} />
            </div>
              <div className="tw-flex tw-flex-col gap-2">
                <label className="tw-text-gray-300">Kind</label>
                <div className="tw-flex tw-items-center gap-4 tw-text-gray-300">
                <label className="tw-flex tw-items-center gap-1"><input type="radio" name="kind" value="Use" checked={form.kind === 'Use'} onChange={() => setForm((f: any) => ({ ...f, kind: 'Use' }))} /> Use</label>
                <label className="tw-flex tw-items-center gap-1"><input type="radio" name="kind" value="Source" checked={form.kind === 'Source'} onChange={() => setForm((f: any) => ({ ...f, kind: 'Source' }))} /> Source</label>
                </div>
              </div>
            <div className="tw-flex tw-flex-col gap-2">
              <label className="tw-text-gray-300">Class</label>
              <input className="tw-w-full tw-bg-gray-800 border tw-border-gray-700 rounded px-2 py-1 text-white" value={form.class} onChange={e => setForm((f: any) => ({ ...f, class: e.target.value }))} />
            </div>
            <div className="tw-flex tw-flex-col gap-2">
              <label className="tw-text-gray-300">Event</label>
              <input className="tw-w-full tw-bg-gray-800 border tw-border-gray-700 rounded px-2 py-1 text-white" value={form.event} onChange={e => setForm((f: any) => ({ ...f, event: e.target.value }))} />
            </div>
            <div className="tw-border-t tw-border-gray-700 pt-2">
              <div className="tw-text-gray-300 mb-1">Allowed Units</div>
              <div className="tw-grid tw-grid-cols-3 gap-2">
                {uoms.map(u => (
                  <label key={u.uom_code} className="tw-flex tw-items-center gap-2 tw-text-gray-300">
                    <input type="checkbox" checked={form.uoms.includes(u.uom_code)} onChange={e => setForm((f: any) => ({ ...f, uoms: e.target.checked ? [...f.uoms, u.uom_code] : f.uoms.filter((x: string) => x !== u.uom_code) }))} />
                    <span>{u.uom_code} · {u.name}</span>
                  </label>
                ))}
              </div>
            </div>
            <div className="tw-border-t tw-border-gray-700 pt-2">
              <div className="tw-text-gray-300 mb-1">Entity Applicability</div>
              <div className="tw-grid tw-grid-cols-5 gap-2 tw-text-gray-300">
                {[{ value: 0, label: 'Project' }, { value: 1, label: 'Level 1' }, { value: 2, label: 'Level 2' }, { value: 3, label: 'Level 3' }].map(({ value, label }) => (
                  <label key={value} className="tw-flex tw-items-center gap-2">
                    <input
                      type="checkbox"
                      checked={form.tiers.includes(value)}
                      onChange={e => setForm((f: any) => ({
                        ...f,
                        tiers: e.target.checked
                          ? [...f.tiers, value]
                          : f.tiers.filter((x: number) => x !== value)
                      }))}
                    />
                    <span>{label}</span>
                  </label>
                ))}
              </div>
            </div>
            <div className="tw-flex gap-2 pt-2">
              <SemanticButton intent="primary-action" size="sm" onClick={onSave} disabled={saving}>Save</SemanticButton>
              {selectedId && <SemanticButton intent="destructive-action" size="sm" onClick={onDelete} disabled={saving}>Delete</SemanticButton>}
            </div>
          </div>
        </div>
      </div>
    </div>
  )
}

export default CategoryTree
