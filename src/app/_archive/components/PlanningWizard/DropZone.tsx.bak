'use client'

import React from 'react'
import { useDrop } from 'react-dnd'
import { DragItemType } from './DraggableTile'

interface DropZoneProps {
  accepts: DragItemType[]
  onDrop: (item: { type: DragItemType }) => void
  children: React.ReactNode
  className?: string
  isActive?: boolean
}

const DropZone: React.FC<DropZoneProps> = ({ 
  accepts, 
  onDrop, 
  children, 
  className = '',
  isActive: _isActive = false 
}) => {
  const [{ isOver, canDrop }, drop] = useDrop(() => ({
    accept: accepts,
    drop: (item: { type: DragItemType }) => onDrop(item),
    collect: (monitor) => ({
      isOver: monitor.isOver(),
      canDrop: monitor.canDrop(),
    }),
  }))

  const getDropZoneStyle = () => {
    if (isOver && canDrop) {
      return {
        borderColor: 'var(--cui-primary)',
        backgroundColor: 'var(--cui-primary-bg-subtle)',
      }
    }
    if (canDrop) {
      return {
        borderColor: 'var(--cui-primary-border-subtle)',
        backgroundColor: 'var(--cui-secondary-bg)',
      }
    }
    return {
      borderColor: 'var(--cui-border-color)',
      backgroundColor: 'transparent',
    }
  }

  return (
    <div
      ref={drop}
      className={`tw-border-2 tw-border-solid rounded-3 tw-transition-colors tw-duration-200 ${className}`}
      style={getDropZoneStyle()}
    >
      {children}
    </div>
  )
}

export default DropZone
