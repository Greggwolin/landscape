'use client';

import React from 'react';
import { ComplexityTier } from '@/contexts/ComplexityModeContext';

interface ColumnConfig {
  id: string;
  label: string;
  visible: boolean;
  minTier: ComplexityTier;
  description?: string;
}

interface ConfigureColumnsModalProps {
  isOpen: boolean;
  onClose: () => void;
  columns: ColumnConfig[];
  onToggleColumn: (columnId: string) => void;
  currentMode: ComplexityTier;
}

export function ConfigureColumnsModal({
  isOpen,
  onClose,
  columns,
  onToggleColumn,
  currentMode
}: ConfigureColumnsModalProps) {
  if (!isOpen) return null;

  const tierOrder: Record<ComplexityTier, number> = { basic: 1, standard: 2, advanced: 3 };
  const currentTierLevel = tierOrder[currentMode];

  // Filter columns available in current mode
  const availableColumns = columns.filter(col => tierOrder[col.minTier] <= currentTierLevel);
  const lockedColumns = columns.filter(col => tierOrder[col.minTier] > currentTierLevel);

  return (
    <div className="tw-fixed tw-inset-0 bg-black/50 tw-flex tw-items-center tw-justify-center tw-z-50" onClick={onClose}>
      <div className="tw-bg-gray-800 border tw-border-gray-700 tw-rounded-lg p-6 tw-max-w-2xl tw-w-full mx-4" onClick={(e) => e.stopPropagation()}>
        <div className="tw-flex tw-items-center tw-justify-between mb-4">
          <h3 className="tw-text-xl tw-font-semibold text-white">Configure Columns</h3>
          <button
            onClick={onClose}
            className="btn btn-sm btn-ghost-secondary"
            aria-label="Close"
          >
            <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div className="mb-4">
          <p className="tw-text-sm tw-text-gray-300 mb-4">
            Select which columns to display in the expense table. Some columns are only available in Standard or Advanced modes.
          </p>

          {/* Available Columns */}
          <div className="tw-space-y-2 mb-6">
            <h4 className="tw-text-sm tw-font-medium tw-text-gray-300 mb-2">Available in {currentMode} mode:</h4>
            {availableColumns.map(col => (
              <label
                key={col.id}
                className="tw-flex tw-items-start gap-3 p-3 tw-bg-gray-900 rounded hover:tw-bg-gray-850 tw-cursor-pointer tw-transition-colors"
              >
                <input
                  type="checkbox"
                  checked={col.visible}
                  onChange={() => onToggleColumn(col.id)}
                  className="mt-1 w-4 h-4 tw-text-blue-600 tw-bg-gray-700 tw-border-gray-600 rounded focus:ring-blue-500"
                />
                <div className="tw-flex-1">
                  <div className="tw-flex tw-items-center gap-2">
                    <span className="text-white tw-font-medium">{col.label}</span>
                    <span className="tw-text-xs px-2 py-0.5 tw-bg-gray-700 tw-text-gray-300 rounded">
                      {col.minTier}
                    </span>
                  </div>
                  {col.description && (
                    <p className="tw-text-xs tw-text-gray-400 mt-1">{col.description}</p>
                  )}
                </div>
              </label>
            ))}
          </div>

          {/* Locked Columns */}
          {lockedColumns.length > 0 && (
            <div className="tw-space-y-2">
              <h4 className="tw-text-sm tw-font-medium tw-text-gray-400 mb-2">
                Locked columns (upgrade to {lockedColumns[0].minTier} mode to access):
              </h4>
              {lockedColumns.map(col => (
                <div
                  key={col.id}
                  className="tw-flex tw-items-start gap-3 p-3 tw-bg-gray-900/50 rounded tw-opacity-50"
                >
                  <input
                    type="checkbox"
                    disabled
                    className="mt-1 w-4 h-4 tw-text-gray-600 tw-bg-gray-800 tw-border-gray-700 rounded tw-cursor-not-allowed"
                  />
                  <div className="tw-flex-1">
                    <div className="tw-flex tw-items-center gap-2">
                      <span className="tw-text-gray-400 tw-font-medium">{col.label}</span>
                      <span className="tw-text-xs px-2 py-0.5 tw-bg-gray-700 tw-text-gray-400 rounded">
                        {col.minTier}
                      </span>
                      <svg className="w-4 h-4 tw-text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                      </svg>
                    </div>
                    {col.description && (
                      <p className="tw-text-xs tw-text-gray-500 mt-1">{col.description}</p>
                    )}
                  </div>
                </div>
              ))}
            </div>
          )}
        </div>

        <div className="tw-flex tw-justify-end gap-2 pt-4 tw-border-t tw-border-gray-700">
          <button
            onClick={onClose}
            className="btn btn-primary"
          >
            Done
          </button>
        </div>
      </div>
    </div>
  );
}
